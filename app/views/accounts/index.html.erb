<h1>Listing accounts</h1>

<table>
  <tr>
    <th>Desc</th>
    <th>Account</th>
    <th>User</th>
    <th></th>
    <th></th>
  </tr>

<% @accounts.each do |account| %>
  <tr>
    <td><%= account.desc %></td>
    <td><%= account.account %></td>

    <td><%= User.find(account.user_id).username %></td>
    <td><%= link_to 'Show', account_path(account) %></td>
	<td><%= link_to 'Register', register_account_path(account), method: :post %></td>
  </tr>
<% end %>
</table>

<br />

