<h1>Listing accounts</h1>

<table class="boot">
  <tr>
    <th>Description</th>
    <th>Account</th>
    <th>User</th>
    <th></th>
  </tr>

<% @accounts.each do |account| %>
  <tr>
    <td><%= account.desc %></td>
    <td><%= account.account %></td>

    <td><%= User.find(account.user_id).username %></td>
    <td>
	<div style='text-align:right;'>
	<div class="button-group">
		<%= link_to 'Show', account_path(account), :class => "button primary icon search" %>
		<%= link_to 'Register', register_account_path(account), method: :post, :class => "button icon rss" %>
	</div>
	</div>
	</td>
  </tr>
<% end %>
</table>

<br />
<div class="input">
	<%= link_to 'New Account', new_account_path, :class => "button primary icon add" %>
	<%= link_to 'Back', dashboard_path, :class => "button danger icon home" %>
</div>
