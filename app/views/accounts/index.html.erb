<h1>Listing accounts</h1>

<table>
  <tr>
    <th>Desc</th>
    <th>Account</th>
    <th>User</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @accounts.each do |account| %>
  <tr>
    <td><%= account.desc %></td>
    <td><%= account.account %></td>
    <td><%= account.user.username %></td>
    <td><%= link_to 'Show', user_account_path(account.user,account) %></td>
    <td><%= link_to 'Edit', edit_user_account_path(account.user,account) %></td>
    <td><%= link_to 'Destroy', user_account_path(account.user,account), confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

