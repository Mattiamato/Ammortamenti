<h1>Listing categories of items</h1>

<table>
  <tr>
    <th>Description</th>
    <th>Unit price</th>
    <th>Serial number</th>
    <th>Image</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @categories.each do |category| %>
  <tr>
    <td><%= category.desc %></td>
    <td><%= category.unit_price %></td>
    <td><%= category.sn %></td>
    <td><%= category.image %></td>
    <td><%= link_to 'Show', category, :class => "btn info"  %></td>
    <td><%= link_to 'Edit', edit_category_path(category), :class => "btn"  %></td>
    <td><%= link_to 'Destroy', category, confirm: 'Are you sure?', method: :delete, :class => "btn danger"%></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Category', new_category_path, :class => "btn success"  %>
