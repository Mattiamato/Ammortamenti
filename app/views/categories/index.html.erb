<h1>Listing categories of items</h1>

<table class="boot">
  <tr>
    <th>Description</th>
    <th>Unit price</th>
    <th>Serial number</th>
    <th>Image</th>
    <th></th>
  </tr>

<% @categories.each do |category| %>
  <tr>
    <td><%= category.desc %></td>
    <td><%= category.unit_price %></td>
    <td><%= category.sn %></td>
    <td><%= category.image %></td>
    <td>
	<div style='text-align:right;'>
	<div class="button-group">
	<%= link_to 'Show', category, :class => "button primary icon search"%>
    <%= link_to 'Edit', edit_category_path(category), :class => "button icon edit" %>
    <%= link_to 'Destroy', category, confirm: 'Are you sure?', method: :delete, :class => "button danger icon trash"%>
	</div>
	</div>
	</td>

  </tr>
<% end %>
</table>

<br />
<div class="button primary icon add" id="new_category_button">New Category</div>
<br />
<br />
<%= form_for(@category) do |f| %>
  <h3>New Category details:</h3><br />
  <div class="clearfix">
    <%= f.label :desc %>
	<div class="input">
		<%= f.text_field :desc %>
	</div>
  </div>
  <div class="clearfix">
    <%= f.label :unit_price %>
	<div class="input">
		<%= f.text_field :unit_price %>
	</div>
  </div>
  <div class="clearfix">
    <%= f.label :sn %>
	<div class="input">
		<%= f.text_field :sn %>
	</div>
  </div>
  <div class="clearfix">
    <%= f.label :image %>
	<div class="input">
		<%= f.text_field :image %>
	</div>
  </div>
  
  <div class="clearfix">
    <%= f.label :tags %>
	<div class="input">
		<%= text_field_tag "category[tag_list]" %>
	</div>
  </div>
  
  <div class ="input">
    <%= f.submit :class => "button primary"  %>

<% end %>
