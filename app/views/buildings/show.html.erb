<p id="notice"><%= notice %></p>

<p>
  <b>City:</b>
  <%= @building.city %>
</p>

<p>
  <b>Street:</b>
  <%= @building.street %>
</p>

<p>
  <b>Number:</b>
  <%= @building.number %>
</p>

<p>
  <b>Nation:</b>
  <%= @building.nation %>
</p>

<p>
  <b>Description:</b>
  <%= @building.desc %>
</p>
<br />
<h2>Add an office in <%= @building.street %> <%= @building.number %></h2>
<br />

<%= form_for([@building,@building.offices.build]) do |f| %>


  <div class="clearfix">
    <%= f.label :desc %>
	<div class="input">
		<%= f.text_field :desc %>
	</div>
  </div>
  <div class="clearfix">
    <%= f.label :number %>
	<div class="input">
		<%= f.text_field :number %>
	</div>
  </div>
  
  <br />
  
  <div>
    <%= f.submit :class => "btn success" %>
  </div>
<% end %>
<br />
<h2> Offices list: </h2>

<table>
  <tr>
    <th>Desc</th>
    <th>Number</th>

    <th></th>
	<th></th>
	<th></th>
  </tr>

<% @offices.each do |office| %>
  <tr>
    <td><%= office.desc %></td>
    <td><%= office.number %></td>
    
    <td><%= link_to 'Show', building_office_path(@building,office), :class => "btn info"  %></td>
	<td><%= link_to 'Edit', edit_building_office_path(@building,office), :class => "btn"  %></td>
	<td><%= link_to 'Destroy', building_office_path(@building,office), confirm: 'Are you sure?', method: :delete, :class => "btn danger"  %></td>
  </tr>
<% end %>
</table>
<br />
<br />
<%= link_to 'Edit', edit_building_path(@building), :class => "btn info"  %>
<%= link_to 'Back', buildings_path, :class => "btn danger" %>
