<h1>Listing buildings</h1>

<table>
  <tr>
    <th>City</th>
    <th>Street</th>
    <th>Number</th>
    <th>Nation</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @buildings.each do |building| %>
  <tr>
    <td><%= building.city %></td>
    <td><%= building.street %></td>
    <td><%= building.number %></td>
    <td><%= building.nation %></td>
    <td><%= building.desc %></td>
    <td><%= link_to 'Show', building , :class => "btn info" %></td>
    <td><%= link_to 'Edit', edit_building_path(building), :class => "btn"  %></td>
    <td><%= link_to 'Destroy', building, confirm: 'Are you sure?', method: :delete, :class => "btn danger"  %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Building', new_building_path, :class => "btn success"  %>
