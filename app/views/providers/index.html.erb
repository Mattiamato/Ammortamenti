<h1>Listing providers</h1>

<table>
  <tr>
    <th>City</th>
    <th>Street</th>
    <th>Number</th>
    <th>Nation</th>
    <th>Phone</th>
    <th>Email</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @providers.each do |provider| %>
  <tr>
    <td><%= provider.city %></td>
    <td><%= provider.street %></td>
    <td><%= provider.number %></td>
    <td><%= provider.nation %></td>
    <td><%= provider.phone %></td>
    <td><%= provider.email %></td>
    <td>
	<div class="button-group">
		<%= link_to 'Show', provider, :class => "button primary icon search"%>
		<%= link_to 'Edit', edit_provider_path(provider), :class => "button icon edit" %>
		<%= link_to 'Destroy', provider, confirm: 'Are you sure?', method: :delete, :class => "button danger icon trash"%>
	</div>
	</td>
  </tr>
<% end %>
</table>

<br />
<div class = "input">
	<%= link_to 'New Provider', new_provider_path, :class => "button primary icon add" %>
</div>
